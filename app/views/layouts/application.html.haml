!!! 5
%html
  %head
    %title= "Kicker Counter"
    %meta{ :name => "viewport", :content => "width=device-width" }
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %link{rel: 'shortcut icon', href: '/favicon.png'}
  %body{:class => [controller_name], :id => "#{controller_name}_#{action_name}"}
    #wrapper
      .navbar.navbar-inverse.navbar-fixed-top
        .navbar-inner
          .container
            = image_tag "/favicon.png", :class => "pull-left football"
            = link_to "Railslove Kicker",  root_path, :id => "logo", :class => 'brand'
            .nav-collapse.collapse
              %ul.nav
                %li= link_to "Login", "/auth/twitter"
                %li= link_to "Neues Match", new_match_path
                %li= link_to "Teams", teams_path




      .container.flash_messages
        - flash.each do |key, value|
          .flash{ :class => key.to_s }
            = value
      .container#main-content
        .main
          = yield
        .sidebar
          = render "users/list"

    %footer

