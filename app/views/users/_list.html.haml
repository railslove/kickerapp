%ul.user_list
  - User.order("quote DESC").each_with_index do |user, index|
    %li
      = link_to user, :title => user.name do
        = image_tag(user.image)
        %span.user_game_info
          .quote= user.quote
          %span.ranking
            - if index == 0
              %i.icon-star{ :title => ranking_title(user, index) }
            - else
              %i{ :class => current_ranking(user, index), :title => ranking_title(user, index) }
          .balanace= match_balance(user.number_of_wins, user.number_of_loses)